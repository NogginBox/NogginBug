@model NogginBug.MvcSite.ViewModels.Bugs.CreatePageViewModel

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create new bug</li>
    </ol>
</nav>

<h1>Create new bug</h1>

<form asp-action="CreatePage">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Bug.Title"></label>
        <input asp-for="Bug.Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Bug.Description"></label>
        <textarea asp-for="Bug.Description" class="form-control" rows="5"></textarea>
    </div>

    <div class="form-group">
        <button type="submit" value="Create" class="btn btn-primary float-right">Save</button>
    </div>
</form>